# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_ai
DB_USER=trading_user
DB_PASSWORD=your_secure_password_here

# Data Sources
TWELVE_DATA_API_KEY=  # Optional: Leave empty if using yfinance only

# Risk Management
RISK_PER_TRADE_PCT=1.0
INITIAL_CAPITAL=800

# Trading Parameters
DEFAULT_SPREAD_EUR=0.0002  # 2 pips for EUR/USD
DEFAULT_SPREAD_GBP=0.0003  # 3 pips for GBP/USD
DEFAULT_SPREAD_XAU=0.50    # 50 cents for Gold

# Strategy Parameters
EMA_SHORT=20
EMA_LONG=50
RSI_PERIOD=14
ATR_PERIOD=14
RISK_REWARD_RATIO=2.5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_ai.log

# Environment
ENV=development  # development, production
